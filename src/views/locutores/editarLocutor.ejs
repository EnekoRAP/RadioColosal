<!DOCTYPE html>
<html>
<head>
    <title>Editar Locutor</title>
</head>
<body>
    <h1>Editar Locutor</h1>

    <% if (error) { %>
        <div style="color: red;">
            Error: <%= error %>
        </div>
    <% } %>

    <form action="/locutores/<%= locutor._id %>?_method=PUT" method="POST">
        <div>
            <label>Nombre:</label>
            <input type="text" name="nombre" value="<%= locutor.nombre %>" required>
        </div>

        <div>
            <label>Biograf√≠a:</label>
            <textarea name="biografia" rows="4" cols="50" required><%= locutor.biografia %></textarea>
        </div>

        <div>
            <label>Instagram:</label>
            <input type="text" name="redSocial.instagram" value="<%= locutor.redSocial?.instagram || '' %>">
        </div>

        <div>
            <label>Facebook:</label>
            <input type="text" name="redSocial.facebook" value="<%= locutor.redSocial?.facebook || '' %>">
        </div>

        <div>
            <label>Programas:</label>
            <select name="idProgramas" multiple required>
                <% programas.forEach(programa => { %>
                    <option value="<%= programa._id %>"
                        <%= (locutor.idProgramas || []).includes(programa._id) ? 'selected' : '' %>>
                        <%= programa.nombre %>
                    </option>
                <% }); %>
            </select>
        </div>

        <div>
            <button type="submit">Guardar Cambios</button>
            <a href="/locutores">Cancelar</a>
        </div>
    </form>
</body>
</html>

