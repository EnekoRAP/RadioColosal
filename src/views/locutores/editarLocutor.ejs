<!DOCTYPE html>
<html>
<head>
    <title>Editar Locutor</title>
</head>
<body>
    <h1>Editar Locutor</h1>

    <% if (error) { %>
        <div style="color: red;">
            Error: <%= error %>
        </div>
    <% } %>

    <form action="/locutores/<%= locutor._id %>?_method=PUT" method="POST">
        <div>
            <label>Nombre:</label>
            <input type="text" name="nombre" value="<%= locutor.nombre %>" required>
        </div>
        
        <div>
            <label>Apellido:</label>
            <input type="text" name="apellido" value="<%= locutor.apellido %>" required>
        </div>
        
        <div>
            <label>Alias:</label>
            <input type="text" name="alias" value="<%= locutor.alias %>">
        </div>
        
        <div>
            <label>Email:</label>
            <input type="email" name="email" value="<%= locutor.email %>" required>
        </div>
        
        <div>
            <label>Tel√©fono:</label>
            <input type="text" name="telefono" value="<%= locutor.telefono %>" required>
        </div>
        
        <div>
            <label>Estado:</label>
            <select name="estado" required>
                <% estados.forEach(estado => { %>
                    <option value="<%= estado %>" <%= locutor.estado === estado ? 'selected' : '' %>>
                        <%= estado %>
                    </option>
                <% }); %>
            </select>
        </div>
        
        <div>
            <button type="submit">Guardar Cambios</button>
            <a href="/locutores">Cancelar</a>
        </div>
    </form>
</body>
</html>
