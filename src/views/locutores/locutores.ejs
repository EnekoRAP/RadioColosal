<!DOCTYPE html>
<html>
<head>
    <title>Lista de Locutores</title>
</head>
<body>
    <h1>Locutores</h1>
    <a href="/locutores/agregarLocutor">Agregar Locutor</a>

    <% if (locutores.length === 0) { %>
        <p>No hay locutores registrados.</p>
    <% } else { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Alias</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% locutores.forEach(locutor => { %>
                    <tr>
                        <td><%= locutor.nombre %></td>
                        <td><%= locutor.apellido %></td>
                        <td><%= locutor.alias || '-' %></td>
                        <td><%= locutor.email %></td>
                        <td><%= locutor.telefono %></td>
                        <td><%= locutor.estado %></td>
                        <td>
                            <a href="/locutores/editarLocutor/<%= locutor._id %>">Editar</a>
                            <form action="/locutores/<%= locutor._id %>?_method=DELETE" method="POST" style="display: inline;">
                                <button type="submit" onclick="return confirm('¿Estás seguro?')">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</body>
</html>