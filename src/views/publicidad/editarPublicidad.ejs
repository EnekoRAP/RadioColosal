<!doctype html>
<html lang="es">

<!-- Incluir head -->
<%- include('../layout/publicidad/editarPublicidadHead') %>

<body class="min-vh-100 d-flex flex-column">

    <!-- Body wrapper -->
    <div class="container">
        <h1 class="my-4">Editar Publicidad</h1>
        
        <!-- Body -->
        <form action="/publicidad/editarPublicidad/<%= publicidad._id %>?_method=PUT" method="POST">
            <div class="form-group mb-3">
                <label for="patrocinador">Patrocinador:</label>
                <input type="text" id="patrocinador" name="patrocinador" class="form-control" required 
                       value="<%= publicidad.patrocinador %>">
            </div>
            
            <div class="form-group mb-3">
                <label for="tipo">Tipo:</label>
                <input type="text" id="tipo" name="tipo" class="form-control" required 
                       value="<%= publicidad.tipo %>">
            </div>

            <div class="form-group mb-3">
                <label for="contenido">Contenido:</label>
                <textarea id="contenido" name="contenido" rows="3" class="form-control" required><%= publicidad.contenido %></textarea>
            </div>
            
            <div class="form-group mb-3">
                <label for="fecha_inicio">Fecha de inicio:</label>
                <input type="date" id="fecha_inicio" name="fecha_inicio" class="form-control" required 
                       value="<%= publicidad.fecha_inicio ? new Date(publicidad.fecha_inicio).toISOString().split('T')[0] : '' %>">
            </div>
            
            <div class="form-group mb-3">
                <label for="fecha_fin">Fecha de fin:</label>
                <input type="date" id="fecha_fin" name="fecha_fin" class="form-control" required 
                       value="<%= publicidad.fecha_fin ? new Date(publicidad.fecha_fin).toISOString().split('T')[0] : '' %>">
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a href="/publicidad" class="btn btn-outline ms-2">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- Incluir scripts -->
    <%- include('../layout/publicidad/editarPublicidadScripts') %>
    
</body>
</html>
