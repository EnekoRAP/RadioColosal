<!doctype html>
<html lang="es">

<!-- Incluir head -->
<%- include('../layout/noticias/editarNoticiaHead') %>

<body class="min-vh-100 d-flex flex-column">

    <!--  Body wrapper -->
    <div class="container">
        <h1 class="my-4">Editar Noticia</h1>
        
        <!-- Body -->
        <form action="/noticias/editarNoticia/<%= noticia._id %>?_method=PUT" method="POST">
            <div class="form-group mb-3">
                <label for="titulo">Título:</label>
                <input type="text" id="titulo" name="titulo" class="form-control" required 
                       value="<%= noticia.titulo %>">
            </div>
            
            <div class="form-group mb-3">
                <label for="contenido">Contenido:</label>
                <textarea id="contenido" name="contenido" rows="5" class="form-control" required><%= noticia.contenido %></textarea>
            </div>
            
            <div class="form-group mb-3">
                <label for="fecha">Fecha de publicación:</label>
                <input type="date" id="fecha" name="fecha" class="form-control" required 
                       value="<%= noticia.fecha ? new Date(noticia.fecha).toISOString().split('T')[0] : '' %>">
            </div>
            
            <div class="form-group mb-4">
                <label for="autor">Autor:</label>
                <input type="text" id="autor" name="autor" class="form-control" required 
                       value="<%= noticia.autor %>">
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a href="/noticias" class="btn btn-outline ms-2">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- Incluir scripts de js -->
    <%- include('../layout/noticias/editarNoticiaScripts') %>

</body>
</html>
