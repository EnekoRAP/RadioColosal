<!DOCTYPE html>
<html lang="es">

<!-- Incluir head con estilos -->
<%- include('../layout/oyentes/editarOyenteHead') %>

<body class="min-vh-100 d-flex flex-column">

    <div class="container">
        <h1>Editar Oyente</h1>

        <% if (error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
        <% } %>

        <form action="/oyentes/<%= oyente._id %>?_method=PUT" method="POST">

            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" value="<%= oyente.nombre %>" required>
            </div>

            <div class="form-group">
                <label for="correo">Correo</label>
                <input type="email" id="correo" name="correo" value="<%= oyente.correo %>" required>
            </div>

            <div class="form-group">
                <label for="telefono">Teléfono</label>
                <input type="tel" id="telefono" name="telefono" value="<%= oyente.telefono %>" required>
            </div>

            <div class="form-group">
                <label for="fecha_registro">Fecha de Registro</label>
                <input type="date" id="fecha_registro" name="fecha_registro" value="<%= oyente.fecha_registro %>" required>
            </div>

            <div class="form-group">
                <label for="generos">Géneros Musicales Favoritos</label>
                <input type="text" id="generos" name="generos" value="<%= oyente.generos %>">
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a href="/oyentes" class="btn btn-outline">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- Incluir scripts de js -->
    <%- include('../layout/oyentes/editarOyenteScripts') %>
</body>
</html>