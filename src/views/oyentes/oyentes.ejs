<!DOCTYPE html>
<html>
<head>
    <title>Lista de Oyentes</title>
</head>
<body>
    <h1>Oyentes</h1>
    <a href="/oyentes/agregarOyente">Agregar Oyente</a>

    <% if (oyentes.length === 0) { %>
        <p>No hay oyentes registrados.</p>
    <% } else { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Fecha Registro</th>
                    <th>Géneros</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% oyentes.forEach(oyente => { %>
                    <tr>
                        <td><%= oyente.nombre %></td>
                        <td><%= oyente.correo %></td>
                        <td><%= oyente.telefono %></td>
                        <td><%= oyente.fecha_registro.toLocaleDateString() %></td>
                        <td><%= oyente.generos || '-' %></td>
                        <td>
                            <a href="/oyentes/editarOyente/<%= oyente._id %>">Editar</a>
                            <form action="/oyentes/<%= oyente._id %>?_method=DELETE" method="POST" style="display: inline;">
                                <button type="submit" onclick="return confirm('¿Estás seguro?')">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</body>
</html>