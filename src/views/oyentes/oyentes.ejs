<!doctype html>
<html lang="en">

<!-- Incluir head -->
<%- include('../layout/oyentes/oyenteHead') %>

<body class="min-vh-100 d-flex flex-column">

    <!--  Body wrapper -->
    <div class="container">
        <h1 class="my-4">Oyentes</h1>

        <!-- Body -->
        <div class="header-actions mb-4">
            <a href="/" class="btn btn-outline">
                <i class="fas fa-arrow-left"></i> Volver al Inicio
            </a>
            <a href="/oyentes/agregarOyente" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Agregar Oyente
            </a>
        </div>

        <% if (oyentes.length > 0) { %>
            <div class="listener-grid">
                <% oyentes.forEach(oyente => { %>
                    <div class="listener-card">
                        <div class="listener-header">
                            <h3 class="listener-name"><%= oyente.nombre %></h3>
                            <span class="listener-genre"><%= oyente.generos || 'Sin preferencia' %></span>
                        </div>
                        <div class="listener-body">
                            <div class="listener-info">
                                <i class="fas fa-envelope"></i> <%= oyente.correo %>
                            </div>
                            <div class="listener-info">
                                <i class="fas fa-phone"></i> <%= oyente.telefono %>
                            </div>
                            <div class="listener-info">
                                <i class="fas fa-calendar-alt"></i>
                                <%= oyente.fecha_registro
                                    ? new Date(oyente.fecha_registro).toLocaleDateString('es-ES')
                                    : 'Sin fecha' %>
                            </div>
                        </div>
                        <div class="listener-actions">
                            <a href="/oyentes/editarOyente/<%= oyente._id %>" class="btn btn-outline">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <form action="/oyentes/<%= oyente._id %>?_method=DELETE" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar este oyente?')">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state text-center mt-5">
                <i class="fa-solid fa-users"></i>
                <h3>No hay oyentes registrados</h3>
                <p>Cuando se registren oyentes, aparecerán aquí.</p>
            </div>
        <% } %>
    </div>

    <!-- Incluir scripts de js -->
    <%- include('../layout/oyentes/oyenteHead') %>
    
</body>
</html>